<h2>{{= name}}</h2>
<form class='site'>
  <div class='field'>
    <label>Name</label>
    <input type='text' name='name' value='{{= name}}' />
  </div>
  <div class='field'>
    <label>URL</label>
    <input type='text' name='url' value='{{= url}}' />
  </div>
  <div class='actions'>
    <input type='submit' class='save' value='Save' />
  </div>
</form>
